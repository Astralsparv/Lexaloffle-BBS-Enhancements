{
  "name": "Lexaloffle BBS enhancements",
  "description": "Enhancements to the bulletin board system for Lexaloffle.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "icons/img-16.png"
  },
  "icons": {
    "16": "icons/img-16.png",
    "32": "icons/img-16.png",
    "48": "icons/img-16.png",
    "128": "icons/img-16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting","storage","unlimitedStorage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://lexaloffle.com/*",
        "https://www.lexaloffle.com/*"
      ],
      "run_at": "document_end"
    }
  ]
}